<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/SIZE_TITLE"
        android:background="@color/TITLE_COMMON">

        <TextView
            android:id="@+id/title_tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Title"
            android:textColor="@color/WHITE_COMMON"
            android:textSize="@dimen/WORD_TITLE"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Title"
            android:paddingRight="@dimen/SIZE_INTERVAL_HALF"
            android:paddingLeft="@dimen/SIZE_INTERVAL_HALF"
            android:layout_marginRight="@dimen/SIZE_INTERVAL_HALF"
            android:gravity="center"
            android:textColor="@color/WHITE_COMMON"
            android:textSize="@dimen/WORD_LEVEL_1"
            android:id="@+id/title_tv_right"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
